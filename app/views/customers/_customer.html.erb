<div class="column">
  <div class="card">
    <div class="card-header">
      <p class="card-header-title"><%=customer.name%></p>
    </div>
    <div class="card-image">
      <% if customer.image.present? %>
        <%= image_tag customer.image.variant(resize_to_limit: [285, 285]).processed  %>
      <% end %>
    </div>
    <div class="content">
      <p class="subtitle is-6"><%=customer.phone_number%></p>
    </div>
  </div>
</div>
